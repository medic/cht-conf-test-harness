{
  "extends": "@medic",
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "ignorePatterns": ["docs/"],
  "rules": {
    "max-len": ["error", 200, { "ignoreStrings": true, "ignoreComments": true }],
    "no-console": "off",
    "guard-for-in": "off",
    "quotes": ["error", "single", { "allowTemplateLiterals": true, "avoidEscape": true }]
  },
  "globals": {
    "window": true
  }
}
