      <bind nodeset="/data/init/change_parent" type="select1" required="true()"/>
      <bind nodeset="/data/init/phone_owner" type="string" relevant="../change_parent = 'yes'" required="true()"/>
      <bind nodeset="/data/person/parent" type="string" calculate="coalesce( /data/init/phone_owner , /data/person/parent )"/>
      <bind nodeset="/data/person/contact_type" type="string"/>
      <bind nodeset="/data/person/arv_number" type="string" required="true()"/>
      <bind nodeset="/data/person/tb_id" type="string"/>
      <bind nodeset="/data/person/name" type="string" required="true()"/>
      <bind nodeset="/data/person/c_patient_name" type="string" calculate="../name"/>
      <bind nodeset="/data/person/age_years" type="int" jr:constraintMsg="jr:itext('/data/person/age_years:jr:constraintMsg')" constraint=". &gt;= 0 and . &lt;= 100" required="true()"/>
      <bind nodeset="/data/person/age_months" type="int" jr:constraintMsg="jr:itext('/data/person/age_months:jr:constraintMsg')" constraint=". &gt;= 0 and . &lt;= 11" required="true()"/>
      <bind nodeset="/data/person/ephemeral_months" type="string" calculate="if(format-date-time(today(),&quot;%m&quot;) - ../age_months &lt; 0, format-date-time(today(),&quot;%m&quot;) - ../age_months + 12, format-date-time(today(),&quot;%m&quot;) - ../age_months)"/>
      <bind nodeset="/data/person/ephemeral_years" type="string" calculate="if(format-date-time(today(),&quot;%m&quot;) - ../age_months &lt; 0, format-date-time(today(),&quot;%Y&quot;) - ../age_years - 1, format-date-time(today(),&quot;%Y&quot;) -../age_years)"/>
      <bind nodeset="/data/person/dob_approx" type="string" calculate="date(concat(string( /data/person/ephemeral_years ),'-',if( /data/person/ephemeral_months &lt;10, concat('0',string( /data/person/ephemeral_months )),  /data/person/ephemeral_months ),'-',string(format-date-time(today(), &quot;%d&quot;))))"/>
      <bind nodeset="/data/person/dob_raw" type="string" calculate="if(../dob_calendar != '', 
../dob_calendar,
../dob_approx)"/>
      <bind nodeset="/data/person/dob_iso" type="string" calculate="decimal-date-time(../dob_raw)"/>
      <bind nodeset="/data/person/date_of_birth" type="string" calculate="format-date-time(date(../dob_iso),'%Y-%m-%d')"/>
      <bind nodeset="/data/person/sex" type="select1" required="true()"/>
      <bind nodeset="/data/person/location" type="string" required="true()"/>
      <bind nodeset="/data/person/role" type="string"/>
      <bind nodeset="/data/person/arv/arv_status" type="select1" required="true()"/>
      <bind nodeset="/data/person/arv/arv_line" type="select1" relevant="selected(../arv_status,'yes')" required="true()"/>
      <bind nodeset="/data/person/arv/stable" type="select1" relevant="selected(../arv_status,'yes')" required="true()"/>
      <bind nodeset="/data/person/tb/tb_status" type="select1" required="true()"/>
      <bind nodeset="/data/person/tb/tb_start" type="date" jr:constraintMsg="jr:itext('/data/person/tb/tb_start:jr:constraintMsg')" constraint="floor(decimal-date-time(.)) &lt;= floor(decimal-date-time(today()))" relevant="selected(../tb_status, 'yes')"/>
      <bind nodeset="/data/person/tb/tb_end" type="date" jr:constraintMsg="jr:itext('/data/person/tb/tb_end:jr:constraintMsg')" constraint="floor(decimal-date-time(.)) &gt;= floor(decimal-date-time( /data/person/tb/tb_start ))" relevant="selected(../tb_status, 'yes')"/>
      <bind nodeset="/data/person/other/pregnancy_status" type="select1" relevant="selected(../../sex, 'female')" required="true()"/>
      <bind nodeset="/data/person/other/pregnancy_due_date" type="date" relevant="selected(../pregnancy_status, 'yes')" jr:constraintMsg="jr:itext('/data/person/other/pregnancy_due_date:jr:constraintMsg')" constraint="floor(decimal-date-time(.)) &gt;= floor(decimal-date-time(today()))" required="true()"/>
      <bind nodeset="/data/person/other/lmp_date" type="string" calculate="format-date-time(date-time(decimal-date-time(../pregnancy_due_date) - 280)
, &quot;%Y-%m-%d&quot;)" relevant="../pregnancy_due_date != ''"/>
      <bind nodeset="/data/person/other/chronic_disease" type="select"/>
      <bind nodeset="/data/person/rapidpro/arv" type="string" calculate="if( /data/person/arv/arv_status  = 'yes',if( /data/person/arv/stable  = 'stable','stable','unstable'),'false')"/>
      <bind nodeset="/data/person/rapidpro/tb" type="string" calculate=" /data/person/tb/tb_status  = 'yes'"/>
      <bind nodeset="/data/person/meta/updated_by" type="string" calculate="../../../inputs/user/name"/>
      <bind nodeset="/data/person/meta/updated_by_person_uuid" type="string" calculate="../../../inputs/user/contact_id"/>
      <bind nodeset="/data/person/meta/updated_by_place_uuid" type="string" calculate="../../../inputs/user/facility_id"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
