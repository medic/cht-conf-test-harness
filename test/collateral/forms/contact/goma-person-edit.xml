      <bind nodeset="/data/init/person_parent" type="string" readonly="true()" calculate=" /data/person/parent "/>
      <bind nodeset="/data/init/type" type="string"/>
      <bind nodeset="/data/init/fname" type="string" required="true()"/>
      <bind nodeset="/data/init/lname" type="string" required="true()"/>
      <bind nodeset="/data/init/name" type="string" calculate="concat( /data/init/fname , ' ',  /data/init/lname )" required="true()"/>
